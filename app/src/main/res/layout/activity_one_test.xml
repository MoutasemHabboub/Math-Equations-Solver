<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.areejdarweesh.projectone.learning.one_test">
    <TextView
        android:id="@+id/quastionnn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quastion"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_margin="25dp"
        android:textColor="@color/toty"/>
    <TextView
        android:id="@+id/quastion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_marginTop="150dp"
        android:textColor="@color/toty"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="50dp"
        android:padding="10dp"
        android:layout_below="@+id/quastion"
        android:gravity="center"
        android:layout_margin="15dp"
        android:id="@+id/ansar">
        <TextView
            android:id="@+id/var"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:layout_margin="10dp"
            android:textSize="22dp"
            android:textColor="@color/toty"
            android:fontFamily="casual"
            android:paddingLeft="30dp" />

        <EditText
            android:id="@+id/ans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:fontFamily="casual"
            />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ansar"
        android:text="next"
        android:onClick="next"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/btn_change"
        android:layout_marginTop="150dp" />
</RelativeLayout>
