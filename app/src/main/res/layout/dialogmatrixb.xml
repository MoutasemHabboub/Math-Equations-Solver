<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="@color/totyyy"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:layout_marginBottom="25dp">
                <TextView
                    android:id="@+id/title_pos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/toty"
                    android:fontFamily="casual"
                    android:textSize="20dp"
                    android:textAlignment="textStart"
                    android:text="coulmuns"/>


                <EditText
                    android:id="@+id/columnB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/white"
                    android:fontFamily="casual"
                    android:layout_marginBottom="20dp"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/point_posi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/toty"
                    android:fontFamily="casual"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Rows"/>

                <EditText
                    android:id="@+id/rowB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="casual"
                    android:textSize="18sp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">
                <Button
                    android:id="@+id/creatB"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="creat"
                    android:textColor="@color/white"
                    android:fontFamily="casual"
                    android:background="@drawable/btn_change"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"/>
                    <Button
                        android:id="@+id/cancelB"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="cancel"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_change"
                        android:layout_gravity="center"
                        android:fontFamily="casual"
                        android:layout_margin="10dp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>