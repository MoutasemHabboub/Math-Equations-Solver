<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <Button
        android:id="@+id/area"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/length"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/change_btn"
        android:fontFamily="monospace"
        android:text="Area"
        android:textColor="@color/white" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Unit Converter -"
        android:textSize="33dp"
        android:fontFamily="casual"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/toty"
        android:id="@+id/textView8" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/imageView7"
        android:layout_below="@+id/area"
        android:src="@drawable/height" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/weight"
        android:layout_alignStart="@+id/imageView5"
        android:src="@drawable/scale"
        android:id="@+id/imageView6" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/textView8"
        android:layout_alignTop="@+id/area"
        android:src="@drawable/radar"
        android:id="@+id/imageView7" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/tempearture"
        android:layout_alignStart="@+id/imageView6"
        android:src="@drawable/temperature"
        android:id="@+id/imageView8" />

    <Button
        android:id="@+id/length"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView6"
        android:layout_alignStart="@+id/area"
        android:layout_marginBottom="23dp"
        android:background="@drawable/change_btn"
        android:fontFamily="monospace"
        android:text="Length"
        android:textColor="@color/white" />


    <Button
        android:id="@+id/weight"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView8"
        android:layout_alignStart="@+id/length"
        android:layout_marginBottom="34dp"
        android:background="@drawable/change_btn"
        android:fontFamily="monospace"
        android:text="Weight"
        android:textColor="@color/white" />


    <Button
        android:id="@+id/tempearture"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/weight"
        android:layout_marginBottom="63dp"
        android:background="@drawable/change_btn"
        android:fontFamily="monospace"
        android:text="Temperature"
        android:textColor="@color/white" />
</RelativeLayout>
